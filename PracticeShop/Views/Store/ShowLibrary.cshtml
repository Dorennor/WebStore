@using WebStore.Models
@model List<WebStore.Models.Device>

<div>
    @if (Model != null)
    {
        <table class="table">
        <tr>
            <td>
                <p>Название игры</p>
            </td>
            <td>
                <p>Жанр</p>
            </td>
            <td>
                <p>Издатель</p>
            </td>
            <td>
            </td>
        </tr>
        @foreach (Device game in Model)
        {
            <tr>
                <td>
                    <p>@game.Name</p>
                </td>
                <td>
                    <p>@game.Type</p>
                </td>
                <td>
                    <p>@game.Manufacturer</p>
                </td>
                <td>
                    <form method="post" asp-route-id="@game.ID" asp-action="DeleteGameFromLibrary">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить из библиотеки
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    }
    else
    {
        <p class="text-white">Ваша библиотека пуста!</p>
    }
</div>