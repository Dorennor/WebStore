@model IEnumerable<WebStore.Models.Device>;

<div>
    <table class="table">
        <tr>
            <td>
                <p>Название игры</p>
            </td>
            <td>
                <p>Жанр</p>
            </td>
            <td>
                <p>Издатель</p>
            </td>
            <td>
                <p>Цена в $</p>
            </td>
            <td>
                <p>
                </p>
            </td>
        </tr>
        @foreach (var game in Model)
        {
            <tr>
                <td>
                    <p>@game.Name</p>
                </td>
                <td>
                    <p>@game.Type</p>
                </td>
                <td>
                    <p>@game.Manufacturer</p>
                </td>
                <td>
                    @if (game.Price == 0)
                    {
                        <p>Бесплатно</p>
                    }
                    else
                    {
                        <p>@game.Price</p>
                    }
                </td>
                <td>
                    @if (game.Price > 0)
                    {
                        <form method="post" asp-action="BuyGame" asp-route-id="@game.ID">
                            <input type="submit" value="Купить" class="button" />
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="AddToLibrary" asp-route-id="@game.ID">
                            <input type="submit" value="Добавить в библиотеку"  class="button" />
                        </form>
                    }
                </td>
            </tr>
        }
    </table>
</div>