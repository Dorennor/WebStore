@model WebStore.Models.UserBin;

<div>
    <div>
        <p class="TitleText">Bin</p>
    </div>
    <table class="table">
        @foreach (var device in Model.Bin)
        {
            <tr>
                <td>
                    <p><img src=@device.Image alt="No image"  width="100" height="100"/></p>
                </td>
                <td>
                    <p>@device.Name</p>
                </td>
                <td>
                    <p>@device.Manufacturer</p>
                </td>
                <td>
                    <p>@device.Description</p>
                </td>
                <td>
                    <p>@device.Price</p>
                </td>
                <td>
                    <p>@device.SerialNumber</p>
                </td>
                <td>
                    <form method="post" asp-action="DeleteFromBin" asp-route-id="@device.Id">
                        <input type="submit" value="Delete"/>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div>
        <label>Along with this, they often buy: </label>
    </div>
    <div>
        <table class="table">
            <tr>
                <td>
                    <p>Image</p>
                </td>
                <td>
                    <p>Name</p>
                </td>
                <td>
                    <p>Manufacturer</p>
                </td>
                <td>
                    <p>Description</p>
                </td>
                <td>
                    <p>Price в ₴</p>
                </td>
                <td>
                    <p>Serial Number</p>
                </td>
                <td>
                    <p></p>
                </td>
            </tr>
            <tr>
                <td>
                    <p><img src=@Model.Offer.Image alt="No image"  width="100" height="100"/></p>
                </td>
                <td>
                    <p>@Model.Offer.Name</p>
                </td>
                <td>
                    <p>@Model.Offer.Manufacturer</p>
                </td>
                <td>
                    <p>@Model.Offer.Description</p>
                </td>
                <td>
                    <p>@Model.Offer.Price</p>
                </td>
                <td>
                    <p>@Model.Offer.SerialNumber</p>
                </td>
                <td>
                    <form method="post" asp-action="AddToBin" asp-route-id="@Model.Offer.Id">
                        <input type="submit" value="Add to bin"/>
                    </form>
                </td>
            </tr>
        </table>
    </div>
    <div>
        <form method="post" asp-action="Buy">
            <input type="submit" value="Buy"/>
        </form>
    </div>

    
</div>
