@model PracticeShop.ViewModels.EditGameViewModel

<form method="post" asp-action="EditGame" asp-controller="Store">
    <div class="form-group">
        <label asp-for="Name">Название игры</label><br />
        <input type="text" asp-for="Name" value="@Model.Name" />
    </div>
    <div>
        <label asp-for="Genre">Жанр</label><br />
        <input type="text" asp-for="Genre" value="@Model.Genre" />
    </div>
    <div class="form-group">
        <label asp-for="Publisher">Издатеь</label><br />
        <input type="text" asp-for="Publisher" value="@Model.Publisher" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label><br />
        <input type="number" asp-for="Price" value="@Model.Price" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить изменения" />
    </div>
</form>